{
  "extends": [
    "eslint:recommended",
    "eslint-config-airbnb/base"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "indent": 0,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "no-use-before-define": [
      2,
      "nofunc"
    ],
    "func-names": 0,
    "curly": [
      2,
      "multi-or-nest"
    ],
    "quote-props": [
      2,
      "as-needed",
      {
        "keywords": true
      }
    ],
    "no-unused-vars": [
      2,
      {
        "vars": "all",
        "varsIgnorePattern": "__"
      }
    ]
  }
}
